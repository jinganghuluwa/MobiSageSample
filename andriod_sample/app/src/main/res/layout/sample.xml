<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_bar_background"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/native_back_color" >

        <include
            android:id="@+id/view_title_bar"
            layout="@layout/view_titlebar" />

        <ImageView
            android:layout_width="320dip"
            android:layout_height="320dip"
            android:layout_centerInParent="true"
            android:background="@drawable/background"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_title_bar"
            android:orientation="vertical"
            android:padding="10dip" >

            <com.mobisage.sample.view.LogoButton
                android:id="@+id/btn_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <com.mobisage.sample.view.LogoButton
                android:id="@+id/btn_native"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <com.mobisage.sample.view.LogoButton
                android:id="@+id/btn_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>